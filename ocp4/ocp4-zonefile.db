$TTL 1W
@ IN  SOA    ns1.enfluence.io. root (
               2019070700 ; serial
               3H         ; refresh (3 hours)
               30M        ; retry (30 minutes)
               2W         ; expiry (2 weeks)
               1W )       ; minimum (1 week)
  IN  NS     ns1.enfluence.io.
; IN  MX 10  smtp.enfluence.io.
;
; 
ns1             IN  A  192.168.1.120
;smtp           IN  A  192.168.1.120
;
helper          IN  A  192.168.1.120
helper.apps     IN  A  192.168.1.120
;
; The api points to the IP of your load balancer
api.apps        IN  A  192.168.1.120
api-int.apps    IN  A  192.168.1.120
;
; The wildcard also points to the load balancer
*.apps.apps     IN  A  192.168.1.120
;
; Create entry for the bootstrap host
bootstrap.apps  IN  A  192.168.1.112
;
; Create entries for the master hosts
master0.apps    IN  A  192.168.1.100
master1.apps    IN  A  192.168.1.101
master2.apps    IN  A  192.168.1.102
;
; Create entries for the worker hosts
worker0.apps    IN  A  192.168.1.115
worker1.apps    IN  A  192.168.1.131
;
; ETCd cluster lives on the masters, same IPs
etcd-0.apps     IN  A  192.168.1.100
etcd-1.apps     IN  A  192.168.1.101
etcd-2.apps     IN  A  192.168.1.102
;
; SRV records
_etcd-server-ssl._tcp.apps  IN  SRV  0 10 2380 etcd-0.apps.enfluence.io.
_etcd-server-ssl._tcp.apps  IN  SRV  0 10 2380 etcd-1.apps.enfluence.io.
_etcd-server-ssl._tcp.apps  IN  SRV  0 10 2380 etcd-2.apps.enfluence.io.
;
;EOF
